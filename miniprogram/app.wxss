/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

button {
  background: initial;
  background-color: #10C8D1;
}
.l-btn-default {
  background-color: #10C8D1 !important;
}
button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.empty-block {
  color: rgba(50, 62, 68, 0.6);
  margin: 20rpx 0;
}
view {
  /* font-size: 25rpx; */
}
.fade {
  transition: all .2s;
}
