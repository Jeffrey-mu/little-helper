<view class="workplan_content">
    <view class="workPlanCard">
        <view class="title">工作计划</view>
        <view bindtap="copyEvent" class="copyEvent">
            copy
        </view>
        <view class="content_list">
            {{title}}
        </view>
        <view class="content_list" wx:for="{{workList}}" wx:for-item="item" wx:key="index">
            {{index + 1}}、 {{item}}
        </view>
    </view>
    <view class="workPlanCard">
        <view class="title">编辑区域</view>
        <view wx:for="{{workList}}" wx:for-item="item" wx:key="index" class="flex">
            <van-field style="flex: 1" size="large" border="{{ true }}" bind:input="inputChange" data-index="{{index}}" value="{{item}}" focus="{{index === active}}" />
            <text class="del" bindtap="delEvent" data-index="{{index}}" value="{{item}}">x</text>
        </view>
        <van-button color="#10C8D1" block bindtap="addEvent" round type="primary">添加</van-button>
    </view>
</view>
