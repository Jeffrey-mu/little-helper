<view class="home_page">
    <view class="header">
        <view class="title">
            欢迎使用乐趣小帮手
        </view>
        <view class="des">
            请选择你需要的服务
        </view>
    </view>

    <view class="menu">
        <navigator class="menu_item" style="background-image: radial-gradient(circle farthest-corner at 10% 20%, {{item.color[0]}} 0%, {{item.color[1]}} 90%);" wx:for="{{menu_list}}" wx:for-item="item" wx:key="index" url="{{item.link}}">
            <view class="icon_box scale-appear">
                <iconfont icon="{{item.icon}}" size="80" color="{{item.color[0]}}" />
            </view>
            <view class="label">
             {{item.label}}
            </view>
        </navigator>
    </view>
    <view class="footer"></view>
</view>