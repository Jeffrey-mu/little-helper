/* miniprogram/pages/index/index.wxss */
.flex {
    display: flex;
    justify-content: center;
    margin-top: 200rpx;
}

/* miniprogram/pages/more/index.wxss */
.more {
    display: flex;
    margin-top: 10px;
    padding: 10rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}

.more_item {
    width: 30%;
    display: flex;
    border-radius: 20rpx;
    flex-direction: column;
    align-items: center;
    margin-bottom: 30rpx;
    box-shadow: 10px 10px 10px 4px #cccccc;
    /* -webkit-box-shadow: 10px 10px 10px 4px #cccccc;
    -moz-box-shadow: 10px 10px 10px 4px #cccccc; */
    padding-top: 20rpx;
}

.more_item view {
    line-height: 60rpx;
}