<view class="password_box">
    <!-- <l-input label="账号" placeholder="请输入账号" /> -->
    <l-icon name="add" bindtap="handleAdd"/>
    <l-form wx:if="{{showAdd}}" name="student" l-form-btn-class="l-form-btn-class" bind:linsubmit="submit">
        <l-form-item label="姓名:" name="studentName">
            <l-input id="studentName" value="{{student.name}}" hide-label show-row="{{false}}" />
        </l-form-item>

        <l-form-item label="年龄:" name="studentAge">
            <l-input id="studentAge" value="{{student.age}}" hide-label show-row="{{false}}" />
        </l-form-item>

        <l-form-item label="地址:" name="studentAddress">
            <l-input id="studentAddress" value="{{student.address}}" hide-label show-row="{{false}}" />
        </l-form-item>
        <view slot="submit">
            <l-button>提交</l-button>
        </view>
        <view slot="reset">
            <l-button type="default" plain>重置</l-button>
        </view>
    </l-form>


    <l-collapse>
        <l-collapse-item title="{{item.dis}}" wx:for="{{passwordList}}" wx:for-item="item" wx:key="_id">
            <view class="list">
                <view>
                    <text>账号：</text><text>{{item.id}}</text>
                </view>
                <view>
                    <text>密码：</text><text>{{item.password}}</text>
                </view>
                <view>
                    <text>描述：</text><text>{{item.dis}}</text>
                </view>
                <view>
                    <l-button class="del" type="error">删除</l-button>
                </view>
            </view>
        </l-collapse-item>
    </l-collapse>

</view>